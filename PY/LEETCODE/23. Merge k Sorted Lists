# Definition for singly-linked list.
# class ListNode:
#     def __init__(self, val=0, next=None):
#         self.val = val
#         self.next = next
class Solution:
    def mergeKLists(self, lists: List[Optional[ListNode]]) -> Optional[ListNode]:
        biglist = list()
        for i in lists:
            currentNode = i
            while currentNode:
                biglist.append(currentNode.val)
                currentNode = currentNode.next                

        biglist.sort()

        cur = dummy = ListNode(0)
        for e in biglist:
            cur.next = ListNode(e)
            cur = cur.next
        
        return(dummy.next)
